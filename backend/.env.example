# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/roads-authority

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# File Storage - Base URL for serving files (used by RAG service to fetch documents)
# Must be reachable from RAG service (e.g. http://localhost:5000 or your production URL)
BACKEND_PUBLIC_URL=http://localhost:5000

# RAG Service Configuration
RAG_SERVICE_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Ozeki SMS Gateway - Phone verification for password reset
# Base URL of your Ozeki gateway (e.g. https://your-server:9508 or http://your-server:9501)
OZEKI_SMS_BASE_URL=
OZEKI_SMS_USERNAME=RAApp
OZEKI_SMS_PASSWORD=
# OTP expiry in seconds (default: 300 = 5 minutes)
OTP_EXPIRY_SECONDS=300
# Password reset token expiry (default: 15m)
PASSWORD_RESET_TOKEN_EXPIRY=15m
