    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.0",
    "redis": "^4.6.12",
