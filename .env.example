# Root Environment Variables Template
# Copy this file to .env and fill in your values

# ==============================================
# BACKEND API CONFIGURATION
# ==============================================

# Node Environment (development, production, test)
NODE_ENV=development

# Backend API Port
BACKEND_PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://growincode_db_user:<db_password>@cluster1.icmnn0c.mongodb.net/?appName=Cluster1
MONGODB_TEST_URI=mongodb://localhost:27017/roads-authority-test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg

# RAG Service URL
RAG_SERVICE_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:19006

# Logging
LOG_LEVEL=info

# ==============================================
# ADMIN DASHBOARD CONFIGURATION
# ==============================================

# Admin Dashboard Port
ADMIN_PORT=5173

# Backend API Base URL (for admin dashboard)
VITE_API_BASE_URL=http://localhost:3000

# ==============================================
# MOBILE APP CONFIGURATION
# ==============================================

# Backend API Base URL (for mobile app)
API_BASE_URL=http://localhost:3000

# ==============================================
# RAG SERVICE CONFIGURATION
# ==============================================

# RAG Service Port
RAG_SERVICE_PORT=8000

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest
OLLAMA_LLM_MODEL=llama3.2:1b

# Alternative LLM Model (uncomment to use)
# OLLAMA_LLM_MODEL=qwen2.5:7b

# ChromaDB Configuration
CHROMADB_PATH=./data/chromadb
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# RAG Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# Python Logging
PYTHON_LOG_LEVEL=INFO

# ==============================================
# DOCKER CONFIGURATION
# ==============================================

# Docker MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=roads-authority

# Docker Redis
REDIS_DOCKER_PASSWORD=redis123

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================
# Uncomment and configure for production deployment

# Production MongoDB (e.g., MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/roads-authority?retryWrites=true&w=majority

# Production Redis (e.g., Redis Cloud)
# REDIS_URL=redis://username:password@redis-host:port

# Production Cloudinary
# CLOUDINARY_CLOUD_NAME=production-cloud-name
# CLOUDINARY_API_KEY=production-api-key
# CLOUDINARY_API_SECRET=production-api-secret

# Production CORS
# CORS_ORIGIN=https://admin.roadsauthority.na,https://api.roadsauthority.na

# Production JWT Secret (use a strong random string)
# JWT_SECRET=use-a-very-strong-random-secret-key-here

# ==============================================
# OPTIONAL SERVICES
# ==============================================

# Email Service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Monitoring & Analytics
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# ==============================================
# NOTES
# ==============================================
# 1. Never commit the .env file to version control
# 2. Keep production secrets secure and rotate regularly
# 3. Use strong passwords and secrets in production
# 4. Update CORS_ORIGIN to match your production domains
# 5. For local development, you can use the default values

# Security Configuration
FIELD_ENCRYPTION_KEY=your-32-character-encryption-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
SECURITY_AUDIT_LOG_LEVEL=info
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000

# File Security
ANTIVIRUS_API_KEY=your-antivirus-api-key
ANTIVIRUS_API_URL=https://your-antivirus-service.com/api
FILE_QUARANTINE_ENABLED=true